<Window x:Name="frmFoundItem" x:Class="Deliverable7.frmItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Deliverable7"
        mc:Ignorable="d"
        Title="Item Found" Height="347" Width="399">
    <Grid x:Name="rctImage" Margin="0,0,2,0">
        <TextBlock x:Name="tbOutputItem" HorizontalAlignment="Left" Margin="70,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="250" FontSize="16" TextAlignment="Center"/>
        <Button x:Name="btnYes" Content="Yes" HorizontalAlignment="Left" Margin="70,242,0,0" VerticalAlignment="Top" Width="100" FontSize="16" Height="25" Click="btnYes_Click"/>
        <Button x:Name="btnNo" Content="No" HorizontalAlignment="Left" Margin="220,242,0,0" VerticalAlignment="Top" Width="100" FontSize="16" Height="25" Click="btnNo_Click"/>
        <Image x:Name="imgItem" Height="130" Margin="129,35,0,0" Width="130" VerticalAlignment="Top" HorizontalAlignment="Left"/>

    </Grid>
</Window>
